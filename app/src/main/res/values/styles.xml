<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/actionbar_background</item>
    </style>
    
    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_drawable_style</item>
        <item name="android:max">100</item>
    </style>


    <!--AppStyles-->

    <style name="ListItemBottomButtonTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/list_item_training_buttons</item>
        <item name="android:drawablePadding">-26dp</item>
        <item name="android:paddingStart">26dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="ListrowItemBooked">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">133dp</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>

</resources>


