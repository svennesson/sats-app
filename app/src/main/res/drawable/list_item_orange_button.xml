<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
           <corners
                android:radius="50dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <solid 
                android:color="#CB0101"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
 			<solid 
 			    android:color="@color/orange" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>
